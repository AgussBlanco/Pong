package Clases;

import javax.swing.JPanel;
import java.awt.Color;
import java.awt.Graphics;

public class PanelPrincipal extends JPanel {

    private static final long serialVersionUID = 1L;

    public PanelPrincipal() {
     
    }

    @Override
    protected void paintComponent(Graphics g) {
        super.paintComponent(g);
        int panelWidth = getWidth();
        int panelHeight = getHeight();
        
        
        int rectWidth = (int) (panelWidth * 0.02);
        int rectHeight = (int) (panelHeight * 0.25);


        int x1 = 0;
        int y1 = (panelHeight - rectHeight) / 2;
        g.setColor(Color.blue);
        g.fillRect(x1, y1, rectWidth, rectHeight);
        
        int x2 = 0;
        int y2 = (panelHeight - rectHeight) / 2;
        int x2 = panelWidth - rectWidth;
        int y2 = (panelHeight - rectHeight) / 2;
        g.setColor(Color.BLUE);
        g.fillRect(x2, y2, rectWidth, rectHeight);
    }
}
